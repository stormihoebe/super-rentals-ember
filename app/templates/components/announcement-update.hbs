{{#if updateAnnouncementForm}}
  <h4>Update {{announcement.name}}'s Message</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">name</label>
        {{input value=name id="name" placeholder=announcement.name class="form-control"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type="date" value=date id="date" placeholder=announcement.date class="form-control"}}
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message" placeholder=announcement.message class="form-control"}}
      </div>

      <button class = "btn btn-default" {{action 'update' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button class = "btn btn-default" {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
