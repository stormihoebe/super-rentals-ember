<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">New Announcement</h3>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
        <label for="owner">Name</label>
        {{input value=name id="name" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="type">Date</label>
        {{input value=date type="date" id="date" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="city">message</label>
        {{input value=message id="message" class="form-control"}}
      </div>
      <button {{action 'saveAnnouncement1'}} class="btn btn-default">Save</button>
    </form>
  </div>
</div>
